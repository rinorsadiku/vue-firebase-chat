{
  "firestore": [
    {
      "target": "default",
      "rules": "firestore.rules",
      "indexes": "firestore.indexes.json"
    },
    {
      "target": "test",
      "rules": "firestore.rules",
      "indexes": "firestore.indexes.json"
    }
  ],
  "storage": [
    {
      "target": "default",
      "rules": "storage.rules"
    },
    {
      "target": "test",
      "rules": "storage.rules"
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "enabled": true
    }
  },
  "hosting": [
    {
      "target": "default",
      "public": "./dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "./dist/index.html"
        }
      ]
    },
    {
      "target": "test",
      "public": "./dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "./dist/index.html"
        }
      ]
    }
  ]
}